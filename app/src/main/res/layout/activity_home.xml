<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Tekan tombol untuk panggilan darurat"
            android:id="@+id/notePanic"
            android:textSize="15dp"
            android:textColor="#8837373a"
            android:layout_above="@+id/pdButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp" />

        <Button
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/pdButton"
            android:background="@drawable/button_change"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="TOMBOL PANGGILAN DARURAT" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
